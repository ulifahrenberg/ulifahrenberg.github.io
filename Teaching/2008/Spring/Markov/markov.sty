\newlength{\eplboxone}\newlength{\eplboxtwo}
\newcommand{\e@color}{}
\newcommand{\explbox}[6][def@ult]{%  %% arrow up
  %% #0: arrow color
  %% #1,#2: x,y for arrowhead
  %% #3: length of arrow
  %% #4: negative text indent
  %% #5: (explanation) text
  \setlength{\eplboxone}{#2}%
  \setlength{\eplboxtwo}{#3}%
  \ifthenelse{\equal{#1}{def@ult}}{%
    \renewcommand{\e@color}{blue}}{%
    \renewcommand{\e@color}{#1}}%
  \begin{textblock*}{1pt}(\the\eplboxone,\the\eplboxtwo)%
    \textcolor{\e@color}{$\mathord{\uparrow}$}%
  \end{textblock*}%
  \addtolength{\eplboxone}{.22em}%
  \addtolength{\eplboxtwo}{.1em}%
  \begin{textblock*}{1pt}(\the\eplboxone,\the\eplboxtwo)%
    \textcolor{\e@color}{\rule{.03em}{#4}}%
  \end{textblock*}%
  \addtolength{\eplboxone}{-.22em}%
  \addtolength{\eplboxone}{-#5}%
  \addtolength{\eplboxtwo}{.2em}%
  \addtolength{\eplboxtwo}{#4}%
  \begin{textblock*}{20em}(\the\eplboxone,\the\eplboxtwo)%
    \textcolor{blue}{#6}%
  \end{textblock*}%
}%
\newcommand{\negexplbox}[6][def@ult]{%  %% arrow down
  %% #0: arrow color
  %% #1,#2: x,y for arrowhead
  %% #3: length of arrow
  %% #4: negative text indent
  %% #5: (explanation) text
  \setlength{\eplboxone}{#2}
  \setlength{\eplboxtwo}{#3}
  
  \ifthenelse{\equal{#1}{def@ult}}{
    \renewcommand{\e@color}{blue}}{
    \renewcommand{\e@color}{#1}}

  \begin{textblock*}{1pt}[0,1](\the\eplboxone,\the\eplboxtwo)
    \textcolor{\e@color}{$\mathord{\downarrow}$}
  \end{textblock*}

  \addtolength{\eplboxone}{.22em}
  \addtolength{\eplboxtwo}{-.1em}

  \begin{textblock*}{1pt}[0,1](\the\eplboxone,\the\eplboxtwo)
    \textcolor{\e@color}{\rule{.03em}{#4}}
  \end{textblock*}

  \addtolength{\eplboxone}{-.22em}
  \addtolength{\eplboxone}{-#5}
  \addtolength{\eplboxtwo}{-.1em}
  \addtolength{\eplboxtwo}{-#4}

  \begin{textblock*}{20em}[0,1](\the\eplboxone,\the\eplboxtwo)
    \textcolor{blue}{#6}
  \end{textblock*}
}

